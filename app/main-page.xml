<Page class="page" actionBarHidden="true">
    
    <mdk:BottomNavigation selectedIndex="0" 
                          xmlns:mdk="@nativescript-community/ui-material-bottom-navigation"
                          >

        <mdk:TabStrip class="tab-strip">
            <mdk:TabStripItem class="tab-item">
                <Image src="~/assets/icons/home.svg" width="24" height="24" />
                <Label text="Home" class="tab-label" />
            </mdk:TabStripItem>
            <mdk:TabStripItem class="tab-item">
                <Label text="Gallery" class="tab-label" />
            </mdk:TabStripItem>
            <mdk:TabStripItem class="tab-item">
                <Label text="Profile" class="tab-label" />
            </mdk:TabStripItem>
        </mdk:TabStrip>

        <mdk:TabContentItem>
            <Frame defaultPage="home/index" actionBarHidden="true" />
        </mdk:TabContentItem>
        <mdk:TabContentItem>
            <Frame defaultPage="gallery/index" actionBarHidden="true"  />
        </mdk:TabContentItem>
        <mdk:TabContentItem>
            <Frame defaultPage="profile/index" actionBarHidden="true"  />
        </mdk:TabContentItem>
    </mdk:BottomNavigation>
</Page>
