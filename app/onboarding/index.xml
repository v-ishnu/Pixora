<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" actionBarHidden="true">
    <GridLayout>
        <!-- Full-screen background image -->
        <Image src="~/assets/bg.jpg" stretch="aspectFill" />
        
        <!-- Content overlay -->
        <GridLayout rows="*, auto"> <!-- Semi-transparent overlay -->
            <StackLayout row="0" verticalAlignment="bottom" style="padding-bottom:150px">
                <Label text="Welcome to ArtBoard" class="text-center" style="font-size:24; font-weight:bold"/>
                <Label text="Discover and share amazing artwork with fellow artists" textWrap="true" class="text-center" style="font-size:14; font-weight:bold" />
            </StackLayout>

            <!-- Bottom Buttons -->
            <StackLayout row="1" class="" style="padding-bottom:100px;">
                <Button text="Get Started" tap="{{ onGetStarted }}" style="border-radius:150px; Background-color: #ffa726; font-size:17; font-weight:bold; color:black"/>
                <Button text="Skip" tap="{{ onSkip }}" style="border-radius:150px; Background-color: #ffa726; font-size:17; font-weight:bold; color:black"/>
            </StackLayout>
        </GridLayout>
    </GridLayout>
</Page>