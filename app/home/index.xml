<Page class="page" backgroundColor="transparent" actionBarHidden="true">
    <!-- AppBar -->
    
    <ScrollView>
        <StackLayout class="container">
            <!-- Title and Subtitle -->
            <Label text="Boards" class="title" />
            <Label text="Following galleries to power up your art career" class="subtitle" />

            <!-- Category Filters -->
            <FlexboxLayout class="categories" flexDirection="row">
                <Label text="Painting" class="category-label" />
                <Label text="Illustration" class="category-label" />
            </FlexboxLayout>

            <!-- Paintings Section -->
                <!-- <Label text="Paintings" class="section-title" /> -->
                <StackLayout class="galleryContainer">
                    <GridLayout rows="auto, auto" columns="2*, *" class="gallery-grid">
                         <!-- Top Left Image: Spanning Across Two Columns -->
                        <Image src="~/images/im1.png" row="0" rowSpan="2" class="gallery-image" />

                        <!-- Bottom Left Image -->
                        <Image src="~/images/test.jpg" row="0" col="1" class="gallery-image" backgroundColor="blue"/>

                        <!-- Bottom Right Image -->
                        <Image src="~/images/abc.jpg" row="1" col="1" class="gallery-image" backgroundColor="black"/>
                    </GridLayout>

                    <StackLayout class="gallery-section">
                        <Label class="section-title" text="Paintings" />
                    </StackLayout>

                </StackLayout>
                
            <!-- Illustrations Section -->
            <StackLayout class="gallery-section">
                <!-- <Label text="Illustrations" class="section-title" /> -->

                <StackLayout class="galleryContainer">
                    <GridLayout columns="*, *" class="gallery-grid">
                        <StackLayout class="gallery-item">
                            <Image src="~/images/test.jpg" class="gallery-image" />
                        </StackLayout>
                        <StackLayout class="gallery-item">
                            <Image src="~/images/abc.jpg" class="gallery-image" />
                        </StackLayout>
                    </GridLayout>

                     <StackLayout class="gallery-section">
                        <Label class="section-title" text="Paintings" />
                    </StackLayout>


                </StackLayout>
            </StackLayout>

            <GridLayout>
        <GridLayout rows="*,*" columns="*,*">
            <!-- First Row -->
            <Label text="Column 1 - Row 1 (spans 2 columns)" row="0" col="0" rowSpan="2" class="label" backgroundColor="red"/>
            
            <!-- Second Row -->
            <Label text="Column 2 - Row 2" row="1" col="0" class="label" backgroundColor="blue" />
            <Label text="Column 2 - Row 2" row="1" col="1" class="label" backgroundColor="red" />
        </GridLayout>
    </GridLayout>
        </StackLayout>
    </ScrollView>
</Page>
