<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" actionBarHidden="true">
    <!-- AppBar -->
    
    <ScrollView>
        <StackLayout class="container">
            <!-- Title and Subtitle -->
            <Label text="Boards" class="title" />
            <Label text="Following galleries to power up your art career" class="subtitle" />

            <!-- Category Filters -->
            <FlexboxLayout class="categories" flexDirection="row">
                <Label text="Painting" class="category-label" />
                <Label text="Illustration" class="category-label" />
            </FlexboxLayout>

            <!-- Paintings Section -->
                <StackLayout class="galleryContainer">
                    <GridLayout rows="*, *" columns="2*, *" class="p-1">

                        <!-- Large image on the left -->
                        <Image row="0" col="0" rowSpan="2" src="~/assets/parrot.jpg" stretch="aspectFill" borderTopLeftRadius="20"/>
        
                        <!-- Top right image -->
                        <Image row="0" col="1" src="~/assets/children.jpg" stretch="aspectFill"  borderTopRightRadius="20"/>
            
                        <!-- Bottom right image -->
                        <Image row="1" col="1" src="~/assets/ink.jpg" stretch="aspectFill" />
                    </GridLayout>

                    <StackLayout class="gallery-section" tap="{{onGetStarted}}">
                        <Label class="section-title" style="margin-top:15px; margin-bottom:15px" text="Paintings" />
                    </StackLayout>

                </StackLayout>
                
            <!-- Illustrations Section -->
            <StackLayout class="gallery-section">
                <!-- <Label text="Illustrations" class="section-title" /> -->

                <StackLayout class="galleryContainer">
                    <GridLayout rows="*, *" columns="2*, *" class="p-1">

                        <!-- Large image on the left -->
                        <Image row="0" col="0" rowSpan="2" src="~/assets/parrot.jpg" class="rounded-lg m-1" stretch="aspectFill" borderTopLeftRadius="20" />
        
                        <!-- Top right image -->
                        <Image row="0" col="1" src="~/assets/children.jpg" class="rounded-lg m-1" stretch="aspectFill"  borderTopRighRadius="20"/>
            
                        <!-- Bottom right image -->
                        <Image row="1" col="1" src="~/assets/ink.jpg" class="rounded-lg m-1" stretch="aspectFill" />
                    </GridLayout>

                     <StackLayout class="gallery-section">
                        <Label class="section-title" text="Paintings" />
                    </StackLayout>


                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>
