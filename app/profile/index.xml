<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-gray-100">
    <ActionBar class="bg-transparent">
        <NavigationButton text="&#xf053;" class="fas text-white" tap="onBackTap" />
        <ActionItem ios.position="right" android.position="actionBar">
            <Label text="&#xf004;" class="fas text-white" />
        </ActionItem>
    </ActionBar>

    <GridLayout rows="*, auto">
        <!-- Main Image Area -->
        <Image src="~/images/peacock-illustration.jpg" stretch="aspectFill" row="0" />

        <!-- Bottom Card -->
        <StackLayout row="1" class="bg-white rounded-t-3xl p-4">
            <Button text="Overview" class="bg-[#FF6B51] text-white font-medium rounded-full px-8 py-3 w-32 h-12" />
            
            <GridLayout columns="auto, *" class="mt-4">
                <Label text="&#xf303;" class="fas text-gray-500 mr-2" col="0" />
                <Label text="Digital Illustration" class="text-gray-500 font-medium" col="1" />
            </GridLayout>
        </StackLayout>
    </GridLayout>
</Page>